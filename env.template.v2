# ============================================
# NDJOBI - Configuration Environnementale v2.0
# ============================================
# Copier ce fichier vers .env.local et configurer les valeurs

# === SUPABASE CONFIGURATION ===
# Production
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Development (Local Supabase)
# VITE_SUPABASE_URL=http://127.0.0.1:54321
# VITE_SUPABASE_ANON_KEY=your-local-anon-key

# === SUPER ADMIN CONFIGURATION ===
# ⚠️ CRITIQUE: Ne jamais commiter ces valeurs
VITE_SUPER_ADMIN_CODE=generate-secure-code-here
VITE_SUPER_ADMIN_EMAIL=superadmin@ndjobi.com
VITE_SUPER_ADMIN_PASSWORD=generate-strong-password-here

# === SECURITY CONFIGURATION ===
# Session encryption key (32 caractères minimum)
VITE_SESSION_ENCRYPTION_KEY=generate-32-char-random-string-here

# JWT Secret for additional security
VITE_JWT_SECRET=generate-jwt-secret-here

# === API KEYS (Services Externes) ===
# OpenAI pour analyse IA
VITE_OPENAI_API_KEY=sk-your-openai-key

# Google Gemini (futur)
VITE_GOOGLE_AI_KEY=your-google-ai-key

# Anthropic Claude (backup)
VITE_ANTHROPIC_API_KEY=your-anthropic-key

# === ENVIRONMENT SETTINGS ===
# Environnement: development | staging | production
VITE_APP_ENV=development

# Debug mode (false en production)
VITE_DEBUG_MODE=false

# === FEATURE FLAGS ===
# Activer/désactiver les fonctionnalités
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_BLOCKCHAIN=false
VITE_ENABLE_EMERGENCY_MODULE=true

# === RATE LIMITING ===
# Limites pour prévenir les abus
VITE_MAX_SIGNALEMENTS_PER_DAY=10
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION_MINUTES=30

# === MONITORING ===
# Sentry pour le monitoring d'erreurs (optionnel)
VITE_SENTRY_DSN=

# === CDN & ASSETS ===
# CDN pour les assets statiques (optionnel)
VITE_CDN_URL=

# === CONTACT & SUPPORT ===
# Emails de notification
VITE_ADMIN_EMAIL=admin@ndjobi.ga
VITE_SUPPORT_EMAIL=support@ndjobi.ga
VITE_NOTIFICATION_EMAIL=notifications@ndjobi.ga

# === GEOLOCATION ===
# Service de géolocalisation
VITE_MAPBOX_TOKEN=
VITE_GOOGLE_MAPS_KEY=

# === BACKUP & RECOVERY ===
# Configuration des sauvegardes
VITE_BACKUP_ENCRYPTION_KEY=generate-backup-key-here
VITE_RECOVERY_EMAIL=recovery@ndjobi.ga

