# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_NAME=iAsted
API_VERSION=v1
SECRET_KEY=change-this-secret-key-in-production
API_HOST=0.0.0.0
API_PORT=8000

# Database PostgreSQL
DATABASE_URL=postgresql+asyncpg://iasted:iasted_pass@localhost:5432/iasted_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=true

# RabbitMQ & Celery
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672/
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Deepgram STT (Speech-to-Text)
# Obtenir sur: https://console.deepgram.com
DEEPGRAM_API_KEY=your-deepgram-api-key-here
DEEPGRAM_MODEL=nova-3
DEEPGRAM_LANGUAGE=fr

# OpenAI GPT
# Obtenir sur: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Claude
# Obtenir sur: https://console.anthropic.com
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-haiku-20241022

# Google Gemini
# Obtenir sur: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp

# Google Cloud TTS (Text-to-Speech)
# Créer service account sur: https://console.cloud.google.com
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_TTS_LANGUAGE=fr-FR
GOOGLE_TTS_VOICE=fr-FR-Neural2-B

# ElevenLabs TTS (Optionnel, fallback)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# AWS Configuration (Production uniquement)
AWS_REGION=af-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_ARTIFACTS_BUCKET=iasted-artifacts-dev
S3_LOGS_BUCKET=iasted-logs-dev

# Supabase Integration (Réutilise l'infrastructure Ndjobi)
SUPABASE_URL=https://xfxqwlbqysiezqdpeqpv.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Security & Authentication
JWT_SECRET=change-this-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
AUDIT_SECRET=change-this-audit-secret

# Rate Limiting (tokens par jour)
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_AGENT_DAILY_TOKENS=10000
RATE_LIMIT_ADMIN_DAILY_TOKENS=50000
RATE_LIMIT_SUPER_ADMIN_DAILY_TOKENS=100000

# Semantic Cache Configuration
SEMANTIC_CACHE_ENABLED=true
SEMANTIC_CACHE_THRESHOLD=0.92
SEMANTIC_CACHE_TTL=86400

# LLM Router Settings
LLM_ROUTER_ENABLE_COST_OPTIMIZATION=true
LLM_ROUTER_DEFAULT_PROVIDER=gemini-flash

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Origins (JSON array ou séparé par virgules)
CORS_ORIGINS=["http://localhost:5174","http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true

# Conformité CNPDCP Gabon
DPO_EMAIL=dpo@ndjobi.ga
CNPDCP_REGISTRATION_NUMBER=GA-2025-XXXXX
DATA_RETENTION_CONVERSATIONS_DAYS=90
DATA_RETENTION_AUDIT_YEARS=7

# WebSocket Configuration
WS_MAX_CONNECTIONS_PER_USER=3
WS_HEARTBEAT_INTERVAL=30
WS_MESSAGE_MAX_SIZE=10485760

# Artifact Generation
ARTIFACT_MAX_SIZE_MB=50
ARTIFACT_GENERATION_TIMEOUT_SECONDS=300

